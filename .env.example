# Database (Supabase). Runtime uses DATABASE_URL only; DIRECT_URL is for migrations.
# DATABASE_URL must use the transaction pooler (port 6543) and include: ?sslmode=require&pgbouncer=true
DATABASE_URL="postgresql://postgres.[project-ref]:[YOUR-PASSWORD]@aws-0-[region].pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true"
# Direct connection to primary (port 5432); required for prisma migrate deploy
DIRECT_URL="postgresql://postgres.[project-ref]:[YOUR-PASSWORD]@db.[project-ref].supabase.co:5432/postgres?sslmode=require"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET=""

# Twilio (SMS)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# OpenAI (AI assistant)
OPENAI_API_KEY=""

# App
APP_TIMEZONE="America/New_York"

